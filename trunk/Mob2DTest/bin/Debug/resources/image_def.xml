<spritesheet name="Test_Image" sheet_source="resources/test_image.png">

	<image_properties width="400" height="400" />
	<!-- 
	x and y are always relative to the top left pixel 
	also leave the frame tags open to more easily add onto it... 
	eg: frame events.
	-->
	<animation name="letters">
		<frame>
			<top_left x="0" y="0" /><bottom_right x="200" y="200" />
		</frame>
		<frame>
			<top_left x="200" y="0" /><bottom_right x="400" y="200" />
			<!-- 
			<create_patricle_system id="particle_system_id" /> 
			-->
		</frame>
	</animation>
	<animation name="numbers">
		<frame>
			<top_left x="" y="" /><bottom_right x="" y="" />
		</frame>
		<frame>
			<top_left x="" y="" /><bottom_right x="" y="" />
		</frame>
	</animation>
